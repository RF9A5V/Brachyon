.create-modal
  width 450px
  margin 0 auto
  background-color #000
  padding 20px
  padding-bottom 48px
  box-sizing border-box
  z-index 1
  display flex;
  flex-direction column

.overlay-class
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 1
  display flex
  justify-content center
  align-items center
  overflow-y auto

.tiny-modal
  width 300px
  height 200px
  background-color: #000
  padding: 20px
  outline: none
  input
    width: 100%

.create-modal:focus
  outline none

.overlay-only-modal
  background: none
  width 100%
  height: 100%;
  padding 5%
  outline: none

.div-pad
  position relative


.close-modal
  color #FFF
  font-weight bold


.close-modal:hover
  color #666
  text-decoration none
  cursor pointer


.create-btn
  left 0
  right 0
  bottom 100%


.snap-modal
  width 400px
  height 400px
  margin 0 auto
  background-color #000
  padding 20px
  box-sizing border-box
  z-index 1
  -webkit-animation-name animatetop
  -webkit-animation-duration 0.6s
  animation-name animatetop
  animation-duration 0.6s


.snap-modal:focus
  outline none

.cred-form input[type="text"], .cred-form input[type="password"]
  margin 0

.cred-form input[type="submit"]
  margin-top 20px
  margin-right 0

.cred-form-status
  margin-left: 10px !important
  border solid 2px white

.cred-form-status.large
  font-size 4rem
  padding 2rem

.cred-form-status.small
  width: 42px
  height: 42px
  box-sizing: border-box
  font-size: 2.5rem
