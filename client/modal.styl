.create-modal
  width 600px
  height 600px
  margin 0 auto
  background-color #000
  padding 20px
  box-sizing border-box
  z-index 1
  -webkit-animation-name animatetop
  -webkit-animation-duration 0.6s
  animation-name animatetop
  animation-duration 0.6s


.create-modal:focus
  outline none


@-webkit-keyframes animatetop
  from top -100% opacity 0 display none width 100% height 100%
  to top 0px opacity 1 display inline


@keyframes animatetop
  from top -100% opacity 0 display none width 100% height 100%
  to top 0px opacity 1 display inline


.overlay-class
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 1
  display flex
  justify-content center
  align-items center
  overflow-y auto


.div-pad
  position relative


.close-modal
  color #FFF
  font-weight bold


.close-modal:hover
  color #666
  text-decoration none
  cursor pointer


.create-btn
  left 0
  right 0
  bottom 100%


.snap-modal
  width 400px
  height 400px
  margin 0 auto
  background-color #000
  padding 20px
  box-sizing border-box
  z-index 1
  -webkit-animation-name animatetop
  -webkit-animation-duration 0.6s
  animation-name animatetop
  animation-duration 0.6s


.snap-modal:focus
  outline none
