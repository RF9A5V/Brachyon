.image
  width calc(33% - 14px)
  margin-right 20px
  margin-bottom 20px
  height auto
  display flex
  flex-direction column
  background-color #111
  +between(800px, 1200px)
    width calc(50% - 20px)
  +below(800px)
    width 100%
    margin-right 0

.image:hover
  cursor pointer

+above(1200px)
  .image:nth-child(3n)
    margin-right 0

+between(800px, 1200px)
  .image:nth-child(2n)
    margin-right 0

+below(800px)
  .image
    margin-right 0

.image img
  width 100%
  height auto

.image span
  font-size 20px
  margin 10px 0
  text-align center
