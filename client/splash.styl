.landing-screen
  width 100%
  min-height calc(100vh - 100px)
  display flex
  justify-content center
  align-items center

.img-background
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  opacity 0.4
  user-drag none
  pointer-events none
  background url('/images/bg.jpg') center center no-repeat
  background-size cover

.main-content
  z-index 1

.main-content h1:hover, .main-content h3:hover
  cursor default


.main-content h3
  background-color #00BDFF
  color white
  text-shadow 0px 0px 2px black
  margin 0 4px
  font-weight bold


.main-content h4
  text-align center


.modal-pad
  padding 0 20px
  width: 100%

.or
	padding-top 10px
	padding-bottom 10px


@-webkit-keyframes animcred
    from opacity 0 display none width 50% height 100%
    to  opacity 1 display inline width 30% height 50%


@keyframes animcred
    from opacity 0 display none width 50% height 100%
    to opacity 1 display inline width 30% height 50%

.discover
  border 2px solid #ccc
  width 300px
  margin-top 10px
  &:hover
    cursor pointer
    box-shadow 0 0 10px #ccc

.discover-text
  line-height 50px
  padding-left 3px


.compass
  vertical-align middle
  padding-right 3px

.credential-overlay, .overlay-only
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 3
  display flex
  justify-content center
  align-items center

.overlay-only
  background-color rgba(0,0,0,0.8)
