.slide-page
  min-height 100%
  overflow-y visible
  background-repeat no-repeat
  background-size cover
  background-position center center
  padding 40px
  position: relative;

.slide-page-container
  overflow-y auto
  height calc(100vh - 100px)
  overflow-x hidden

.slide-temp-block
  background-color #666
  padding 10px


.big-name-img
  width 75px
  height 75px
  border-radius 100%
  margin-bottom 10px

.slide
  width: 100vw
  height: calc(100vh - 100px)
  background-position center center
  background-size cover
  position: relative;

.slide > *
  width: 100%
  height: 100%

.slide-container
  min-width: 100vw;
  height: calc(100vh - 100px);
  overflow-y: hidden
  position: relative
  display: inline-block;

.slide-controller
  position: fixed;
  right: 20px;
  top: calc(50vh - 50px)
  display: inline-flex;
  flex-direction: column;
  align-items: center;

.slide-controller-tab
  font-size 14px;
  color: white;
  margin-bottom: 10px;

.slide-controller-tab.active
  font-size 18px;
  color: #FF6000;

.slide-controller-tab:hover:not(.active)
  font-size 16px
  color: #00BDFF

.toc
  position absolute
  top 0
  right 0
  background-color #333
  opacity 0.3
  z-index 2


.toc:hover
  opacity 1


.toc-item
  padding 20px


.toc-item:hover, .toc-item.active
  background-color #666


.toc-item span
  font-size 20px


.sponsor-item
  padding 10px 20px


.sponsor-item img
  width 50px
  height 50px
  border-radius 100%
  margin-right 10px


.sponsor-item p
  font-size 10px
  font-style italic
  text-align left
  line-height 1.2


.sponsor-event-header
  font-size 32px


.slide-schedule
  padding 20px


.schedule-item
  padding 20px


.schedule-item:nth-child(2n - 1)
  background-color rgba(48, 48, 48, 0.3)


.schedule-item:nth-child(2n)
  background-color rgba(64, 64, 64, 0.3)


.schedule-item span
  font-size 20px


.schedule-item p
  font-size 14px
  line-height 1.7


.slide-bracket-list
  background-color rgba(32, 32, 32, 0.4)
  padding 20px


.slide-bracket
  position relative
  margin-bottom 20px


.slide-bracket:last-child
  margin 0


.slide-bracket img
  width 100%
  height auto


.slide-bracket span
  background-color rgba(0, 0, 0, 0.8)
  font-size 16px
  padding 10px
  position absolute
  bottom 20px
  right 20px


.slide-description
  padding 20px
  background-color rgba(80, 80, 80, 0.5)
  margin 20px
  margin-bottom 0


.slide-description p
  font-size 14px
  line-height 1.7


.slide-control
  opacity 0.3
  padding 10px
  width 30px
  height 30px
  display flex
  justify-content center
  align-items center
  position absolute;


.slide-control.up
  top 20px
  left calc(50% - 14px);

.slide-control.down
  bottom 20px
  left calc(50% - 14px);

.slide-control.right
  right 20px
  top calc(50% - 10px);

.slide-control.left
  left 20px
  top calc(50% - 10px);

.slide-control:hover
  opacity 1
  cursor pointer


.slide-page-up
  position absolute
  top 20px
  display flex
  justify-content center
  width 100%


.slide-page-left
  position absolute
  left 20px
  display flex
  align-items center
  height 100%


.slide-page-right
  position absolute
  right 20px
  display flex
  align-items center
  height 100%


.cf-main
  background-color rgba(48, 48, 48, 0.4)
  padding 20px
  margin 20px


.cf-tiers
  background-color rgba(32, 32, 32, 0.4)
  padding 20px
  margin 20px


.cf-tier
  background-color #333
  padding 20px
  margin 10px


.cf-tier:hover
  cursor pointer


.cf-amount
  font-size 32px


.cf-limit
  font-size 12px
  font-style italic


.cf-description
  line-height 1.7
  font-size 14px


.cf-progress-amount
  margin-bottom 10px
  font-size 20px


.cf-progress-container
  border solid 2px white
  height 50px
  width 50%
  min-width 300px
  margin-bottom: 10px


.cf-progress-display
  background-color #3F3
  height 100%


.cf-leaderboard
  padding 0 20px


.cf-tickets
  padding 0 10px


.cf-ticket
  padding 20px
  background-color #333
  margin-bottom 10px
