.calendar
  display inline-block
  border solid 2px white
  padding 10px
  background-color #333


.calendar-container
  display inline-flex
  flex-direction column


.calendar-container input[type="text"]
  margin-bottom 10px


.calendar-month
  display flex
  justify-content space-between
  align-items center


.calendar-month spanhover
  cursor default


.calendar-month-control:hover, .calendar-days-entry:hover, .calendar .fa:hover
  cursor pointer


.calendar-days
  display flex
  padding 5px 0
  width 224px
  flex-wrap wrap


.calendar-days-entry
  width 32px
  height 32px
  text-align center
  font-size 12px
  color #999
  display inline-flex
  justify-content center
  align-items center


.calendar-days-entry.active:not(.selected):hover
  background-color #222


.calendar-days-entry.active
  color white


.calendar-days-entry.selected
  background-color #FF6000
