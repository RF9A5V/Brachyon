/* Header style */
.box .row.header
  flex 0 1 auto


header
  width 100%
  position relative
  box-sizing border-box
  top 0
  left 0
  z-index 3
  padding 10px 20px
  display flex
  justify-content flex-end
  height 50px
  background rgba(0, 0, 0, 0.9)
  box-shadow: 0 2px 5px #111;


header img
  width 50px
  height auto


header img:hover
  cursor pointer

.event-block:hover
  cursor pointer

.event-block.instance:hover *
  border-color #FFF !important
  .event-block-title
    color #FFF

.event-block.event:hover *
  border-color #00BDFF !important;
  .event-block-title
    color: #00BDFF

.event-block.league:hover *
  border-color #FF6000 !important;

.event-block:hover h2
  color #FF6000

.event-block img
  width 100%
  height auto

.event-block *
  border-color #666

#header.headroom
  top 0
  left 0
  right 0
  z-index 3


#header.headroom--scrolled
  top 0


#header.headroom--unfixed
  position fixed


#header.headroom--unpinned
  position fixed


#header.headroom--pinned
  position fixed
  transform translateY(0%)


.hub:hover
  cursor pointer
  -webkit-transition border-bottom 0.5s ease-out
  -moz-transition border-bottom 0.5s ease-out
  -o-transition border-bottom 0.5s ease-out
  transition border-bottom 0.5s ease-out
  border-bottom rgba(255,96,0,0.5) 2px solid
  color white

.hub:focus
  color white

.hub.active
  border-bottom #FF6000 2px solid

.hub
  font-size 16px
  letter-spacing: 1px;
  margin 0 10px
  padding 4px 0 2px 0
  border-bottom transparent 2px solid
  color white
  font-weight bold

.hub:first-child
  margin-left 0px
