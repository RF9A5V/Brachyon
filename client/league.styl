.table-row
  padding 20px
  border solid 2px white
  border-bottom none

.table-row:last-child
  border-bottom solid 2px white

.table-row:nth-child(2n)
  background-color #666

.table-row:nth-child(2n - 1)
  background-color #333

.league-leaderboard
  background-color rgba(51, 51, 51, 0.5);
  margin-top 20px;
  margin-bottom 20px;
  overflow-y: auto;
	+below(800px)
		margin-right 60px

.event-leaderboards
	+below(800px)
		display none
