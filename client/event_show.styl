.participant-panel-container
  display flex
  flex-wrap wrap


.participant-panel
  width 300px
  height 400px
  background-color #666
  display inline-block
  margin 20px


.participant-panel-image
  width 300px
  height 300px
  display flex
  justify-content center
  align-items center
  border-bottom solid 5px #333
  background-color #333
  position relative


.participant-panel-overlay
  position absolute
  width 300px
  height 300px
  padding 15px
  box-sizing border-box


.participant-panel-image img
  width 100%
  height 100%


.participant-panel-desc
  height 100px
  display flex
  justify-content center
  align-items center


.participant-panel:hover
  cursor pointer

.event-bar
  width: calc(50% - 10px);
  margin-right: 20px !important;
  margin-bottom: 20px
  +below(1200px)
    width 100%
    margin-right: 0 !important;

.event-bar-desc
  background-color rgba(48, 48, 48, 0.8);

.event-bar:hover
  cursor: pointer
  & .event-bar-desc
    background-color: #333

+above(1200px)
  .event-bar:nth-child(2n)
    margin-right: 0 !important;

.event-bar-img
  height: 150px;
  width: auto;

.module-toggle
  cursor pointer;
  background-color #111;
  width 100px;
  height 30px;
