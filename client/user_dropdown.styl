.user-dropdown
  position fixed
  right 0
  top 40px


.user-dropdown-content
  background-color #222


.triangle-top
  width 0
  height 0
  border-style solid
  border-width 0 20px 20px 20px
  border-color transparent transparent #222 transparent
  position relative
  right 10px

.user-dropdown-icon
  width 50px
  margin-right 10px
  display flex
  justify-content center

.user-dropdown-icon i
  display inline-block;

.user-dropdown-option
  margin 0
  border 2px transparent solid
  padding 10px 10px
  display inline-flex
  align-items center
  width 180px

.user-dropdown-option:hover
  border 2px #FF6000 solid


.user-dropdown-option:active
  background-color #FF6000


header a:hover
  cursor pointer
