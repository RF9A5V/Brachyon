.event-block:hover
  cursor pointer

.event-block-container .event-block
  box-sizing border-box
  cursor pointer
  border solid 2px #666

.event-block img, .bracket-block img
  width 100%
  height auto
  box-sizing border-box
  border solid 2px #666
  border-left none
  border-right none


.bracket-block span
  position absolute
  left 20px
  bottom 20px
  background-color rgba(0, 0, 0, 0.7)


.event-block-title
  background-color #222
  color white
  text-align left
  margin 0
  padding 20px
  border-bottom none


.event-block-content
  padding 10px 20px
  border-top none
  position relative
  background-color #222


.event-display
  height calc(33vh - 40px)
  margin-top 40px


.event-display-img
  height 100%
  width auto
  float left
  margin-right 2.5%


.event-display-details
  float left
  width 45%


.event-title
  font-weight bold
  font-size 24px
  margin-bottom 10px


.description-container
  margin-bottom 20px
  line-height 1.5em


.description-container img
  margin 0 auto
  display block
  max-width 100%
  height auto


ul.error-container
  padding 10px
  border solid white 2px
  display inline-block
  margin 20px
  max-width 33%
  list-style-type none


.error-container li
  margin-bottom 10px
  line-height 1.2em


.profile-photo
  width 200px
  height 200px
  border-radius 100%
  position relative


.image-overlay
  width 100%
  height 100%
  border-radius 100%
  background-color rgba(0, 0, 0, 0.7)
  position absolute
  top 0
  left 0
  display flex
  justify-content center
  align-items center


.image-overlay:hover
  cursor pointer


.user-divider
  width 75%
  border 0
  height 0
  border-top 1px solid rgba(0, 0, 0, 0.1)
  border-bottom 1px solid rgba(255, 255, 255, 0.3)
