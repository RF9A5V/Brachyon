.user-details
  background-color #222
  display flex
  flex-direction column
  align-items center
  padding 0 40px 20px
  padding-top 30px
  box-sizing border-box


.user-details > *
  margin-bottom 20px


.event-details
  padding 0 50px
  box-sizing border-box
  display flex
  flex-direction column
  margin-bottom 30px


.event-list
  display flex
  flex-wrap wrap
  margin-top 20px


.event-block-container, .bracket-container
  display flex
  flex-wrap wrap
  position relative


.event-block, .bracket-block
  flex-basis calc(33% - 6.66px)
  position relative
  margin-bottom 10px
  margin-left 10px
  border solid 2px #666
  +between(1200px, 1600px)
    flex-basis calc(33% - 6.66px)
  +between(768px, 1200px)
    flex-basis calc(50% - 10px)
    font-size 1.5em
  +below(768px)
    flex-basis 100%
    font-size 2em

.event-block:nth-child(3n - 2)
  margin-left 0px
  +between(1200px, 1600px)
    margin-left 0

.event-block:nth-child(2n - 1)
  +between(768px, 1200px)
    margin-left 0

.event-block:nth-child(n)
  +below(768px)
    margin-left 0

