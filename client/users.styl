.event-block-container
  display flex
  flex-wrap wrap
  position relative


.event-block
  width calc((100% - 20px) / 3)
  position relative
  margin-bottom 10px
  margin-left 10px

  +between(1000px, 1400px)
    width calc((100% - 10px) / 2)
    font-size 1.5em

  +below(1000px)
    margin-left 0
    width 100%
    font-size 2em

+above(1400px)
  .event-block:nth-child(3n - 2)
    margin-left 0px

+between(1000px, 1400px)
  .event-block:nth-child(2n - 1)
    margin-left 0

.event-block:hover
  cursor pointer

.event-block-container .event-block
  box-sizing border-box
  cursor pointer

.event-block-img
  width 100%
  padding-bottom calc(100% * 9 / 16)
  background-size cover
  background-position center center
  border solid 2px #666
  border-top none
  border-bottom none
  box-sizing border-box


.event-block-title
  color white
  text-align left
  margin 0
  padding 29px 20px
  text-overflow ellipsis
  overflow-x hidden
  white-space nowrap;

.event-block-content
  height: 95px;
  padding 20px
  background-color #222
  border solid 2px #666
  display: flex
  align-items: center

.event-block-nav
  padding 10px 20px
  background-color rgba(0, 0, 0, 0.5)

.event-block-nav .fa
  margin-right: 20px
  font-size 24px

.event-block-nav .fa:hover
  color: #FF6000

.event-block-nav .fa:last-child
  margin-right 0

.promoted-event-block
  width 50.5%
  +between(1000px, 1400px)
    width 80%
  +below(1000px)
    width 100%

.user-divider
  width 75%
  border 0
  height 0
  border-top 1px solid rgba(0, 0, 0, 0.1)
  border-bottom 1px solid rgba(255, 255, 255, 0.3)

.user-tab
  padding 5px
  font-size 18px
  margin-right 10px
  border-color rgba(255,96,0,0.1)


.user-tab:hover
  cursor pointer
  -webkit-transition border-bottom 0.5s ease-out
  -moz-transition border-bottom 0.5s ease-out
  -o-transition border-bottom 0.5s ease-out
  transition border-bottom 0.5s ease-out
  border-bottom rgba(255,96,0,0.5) 2px solid

.user-tab:focus
   color white

.category-header
  width: 200px

.user-template
  background-color: #222

.blue:hover
  border-color #00BDFF

.orange:hover
  border-color #FF6000
