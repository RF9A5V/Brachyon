.footer-hub-pad:hover
  background-color black
  cursor pointer
  color lb


#footer.headroom
  bottom 0
  left 0
  right 0
  top 100%

#footer.headroom--unfixed
  position relative
  transform translateY(0)

#footer.headroom--scrolled
  transition transform 200ms ease-in-out

#footer.headroom--unpinned
  position fixed

#footer.headroom--pinned
  position fixed
  transform translateY(60px)
  opacity 0


