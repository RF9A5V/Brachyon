.social-icon-bg
  +above(768px)
    width 40px
    height 50px
  &:hover
    background-color rgba(0, 0, 0, 0.5)
    cursor pointer

.social-icon.fa
  font-size 24px
  margin 0 2px
  color white
  &:hover
    cursor pointer

.social-icon-bg:hover .snapchat
  color #FFFC00


.social-icon-bg:hover .instagram
  color #517FA4


.social-icon-bg:hover .reddit
  color #CEE3F8


.social-icon-bg:hover .facebook
  color #3B5998


.twitch.fa
  font-size 24px
  margin 0 2px


.social-icon-bg:hover .twitch
  color #6441A5


.social-icon-bg:hover .twitter
