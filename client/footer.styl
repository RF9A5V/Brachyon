.box .row.footer
  flex 0 1 40px


.footer
  justify-content center
  background rgba(0, 0, 0, 0.5)
  z-index 1
  bottom 0
  width 100%
  height 50px
  position fixed
  +below(768px)
    height 100px

.footer-hub-pad
  padding calc((50px - 15px) / 2) 5px
  cursor pointer
  font-size 12px
  color white
  +below(768px)
    font-size 1.5em

.footer.fa
  +below(768px)
    font-size 3em !important
    margin-right 10px !important

