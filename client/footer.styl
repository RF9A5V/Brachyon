.box .row.footer
  flex 0 1 40px

.footer-social
  +below(740px)
    display none !important

.footer
  justify-content center
  background rgba(0, 0, 0, 0.5)
  z-index 1
  bottom 0
  width 100%
  height 50px
  position fixed
  padding-right 80px
  +below(740px)
    padding-right 0

.footer-hub
  justify-content flex-end
  +below(740px)
    justify-content center

.footer-hub-bg
  height 50px
  padding: 0 5px
  cursor pointer
  font-size 12px
  color white

.footer-hub-bg:hover
  background-color rgba(0, 0, 0, 0.7)
  cursor pointer
  color #00BDFF

#footer.headroom
  bottom 0
  left 0
  right 0
  top 100%

#footer.headroom--unfixed
  position relative
  transform translateY(0)

#footer.headroom--scrolled
  transition transform 200ms ease-in-out

#footer.headroom--unpinned
  position fixed

#footer.headroom--pinned
  position fixed
  transform translateY(60px)
  opacity 0


