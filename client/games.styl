
.template-container
  width 100%
  position absolute
  background-color #111;
  padding 20px;


.game-result-template, .user-result-template
  background-color #111
  margin-bottom 20px

.game-result-template:hover, .user-result-template:hover
  cursor: pointer

.game-result-template:last-child, .user-result-template:last-child
  margin-bottom 0


.game-result-template:hover .user-result-template:hover
  cursor pointer
  background-color #222


.user-result-template img
  width 50px
  height 50px


.game-result-template img
  width 45px
  height 60px

.game
  width calc((100% - (20px * 8)) / 9)
  margin-right 20px
  margin-bottom 20px
  background-color #222
  +between(800px, 1200px)
    width calc((100% - (20px * 5)) / 6)
  +between(600px, 800px)
    width calc((100% - (20px * 3)) / 4)
  +below(600px)
    width 100%
    margin-right 0

.game:hover
  cursor pointer

+above(1200px)
  .game:nth-child(9n)
    margin-right 0
+between(800px, 1200px)
  .game:nth-child(6n)
    margin-right 0
+between(600px, 800px)
  .game:nth-child(4n)
    margin-right 0

.game img
  width 100%
  height calc(100% * 3 / 4)

.game .game-title
  font-size 14px
  margin-bottom 5px
  text-align center
  max-width: 100%
  overflow-x hidden
  white-space nowrap
  text-overflow ellipsis

.overflow:hover
  animation marquee 5s linear infinite

@keyframes marquee {
  from  { text-indent:  0% }
  to    { text-indent: -120% }
}


.game .game-description
  padding 10px
  padding-top 5px

.game .game-count
  font-size 14px
  font-weight normal
  padding-right 5px
  margin-right 5px
  border-right solid 2px white

.game-count:last-child
  padding-right 0
  border-right none
  margin-right 0

.createGame
  color #FF6000
  border-color #ff6000

.createGame:not(.inactive):hover
  box-shadow 0 0 10px #FF6000
